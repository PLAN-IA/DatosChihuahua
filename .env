# Configuración del Sistema de Servicios Privados Chihuahua
# Copia este archivo como .env y ajusta los valores

# Base de datos
DB_HOST=localhost
DB_NAME=mapas_automatizacion
DB_USER=root
DB_PASSWORD=1234
DB_CHARSET=utf8mb4
DB_PORT=3306

# Aplicación
APP_NAME="Sistema de Servicios Privados"
APP_VERSION=1.0.0
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost

# Seguridad
APP_KEY=tu_clave_secreta_aqui
SESSION_LIFETIME=120

# Límites de consultas
MAX_SEARCH_RESULTS=50
DEFAULT_SEARCH_LIMIT=20

# Logs
LOG_LEVEL=info
LOG_FILE=logs/app.log
